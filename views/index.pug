extends layout

block content
  h1= title
  p Welcome to #{title}
  p We are connecting the servers for rendering 
  button(type="button", onclick="doReduce()" class="btn btn-secondary") Press Me
  #reduce Reduce the value
  a(href="/earphones") earphones
  script.
    var count = 20
    var change = -1
    function doReduce(){
      count = count + change
      change = change -1
      let resultdiv = document.getElementById('reduce')
      resultdiv.innerHTML=`Count ${count} with bump ${change}`
    }  
