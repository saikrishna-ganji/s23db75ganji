extends layout

block content
  - let earphones = results
  h1= title
  - let create = `dispatch(\"/earphones/create\")`
  button.btn( class="btn-secondary", onclick= create) Create new Earphone
  div(class="container-fluid")
  div(class="row m-1")
    each earphone in earphones
      - let destination = `dispatch(\"/earphones/update?id=${earphone._id}\")`
      - let detail = `dispatch(\"/earphones/detail/?id=${earphones._id}")`
      - let deleteEarphones = `dispatch(\"/earphones/delete/?id=${earphones._id}")` 
      div(class="row-sm-2" class="m-1") Earphone #{earphone.earphone_name}(#{earphone.earphone_shape}) is #{earphone.earphone_radius} 
        button.btn( class="btn-primary ml-1", onclick= destination) Update
        button.btn( class="btn-info", onclick= detail) Details
        button.btn( class="btn-dark", onclick= deleteEarphones) Delete

  script.
    function dispatch(path){
      window.location.href=path
    }