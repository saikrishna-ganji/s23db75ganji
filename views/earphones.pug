extends layout

block content
  h1= title
  - var earphones=[{earphone_name:"sony",earphone_shape:"single flange ear tip",earphone_radius:4},{earphone_name:"boat",earphone_shape:"In ear",earphone_radius:3},{earphone_name:"jbl",earphone_shape:"half in ear",earphone_radius:5}]
  div(class="container-fluid")
  div(class="row")
   each b,index  in earphones
    div(class="col-sm-2" onclick =`buy(${index})`) #{b.earphone_name}, #{b.earphone_shape}, #{b.earphone_radius}
    script.
        function buy(a)
        {
            alert(`You purchased Item ${a+1}`)
        } 